<Window x:Class="WorkTimeTracker.wnd_History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTimeTracker"
        mc:Ignorable="d"
        Title="wnd_History" Height="300" Width="300">
    <Grid>
        <ListView Name="lv" Width="auto" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="auto" Header="ID" DisplayMemberBinding="{Binding iID}" />
                    <GridViewColumn Width="auto" Header="Start" DisplayMemberBinding="{Binding dtStartTime}" />
                    <GridViewColumn Width="auto" Header="End" DisplayMemberBinding="{Binding dtEndTime}" />
                    <GridViewColumn Width="auto" Header="Worktime" DisplayMemberBinding="{Binding tsWorktime}" />
                    <GridViewColumn Width="auto" Header="Overtime" DisplayMemberBinding="{Binding tsOvertime}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
